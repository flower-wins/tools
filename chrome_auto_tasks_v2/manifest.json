{
  "manifest_version": 3,
  "name": "Auto Tasks Scheduler",
  "version": "2.0",
  "description": "定时打开网页，后台访问，刷新标签页",
  "permissions": ["storage", "tabs", "alarms", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}